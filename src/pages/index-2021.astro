<Layout title="EcoView">
	<main>
        
		<div class="encabezado">
			<div class="encabezado-izquierda">
				<img src="/resources/logo.png" width="70rem">
				ECOVIEW
			</div>
			<div class="encabezado-derecha">
				<a class="bullet mi-boton" href="forum"><img src="/resources/foco.png" width="20rem"> F o r o</a>

				</button>
			</div>			
		</div>
		
		<div class="contenedor1">
			<div class="contenedor-h1">
				<h1>From the space to our <h1-2>neighborhood</h1-2></h1>
